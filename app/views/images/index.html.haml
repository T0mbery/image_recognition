.center-block
  .flash= flash[:notice]
  %br
  %br
  .cards
    - if @images.exists?
      - @images.each do |img|
        .card
          = image_tag img.foto.recognition.url, class: 'js-card'
          = form_tag(img, method: 'delete', class: 'remove_foto') do
            = submit_tag 'remove'
        
  = form_tag(images_path, multipart: true, class: 'send_foto') do
    = file_field_tag 'foto'
    = submit_tag 'send'

  = form_tag(image_path('all'), multipart: true, class: 'send_foto', method: 'patch') do
    = submit_tag 'reload images'
